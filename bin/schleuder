#!/usr/bin/env ruby

# Don't emit any warnings, they would be sent back to the email-sender as an
# error-message.
$VERBOSE=nil

trap("INT") { exit 1 }


begin
  require_relative '../lib/schleuder/cli'
  Schleuder::Cli.start
rescue => exc
  $stderr.puts "Technical Error: #{exc}\n#{exc.backtrace.first}"
  exit 1
end
